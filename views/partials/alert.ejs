<div id="alert" role="alert">
    <% if (locals.message) { %>
                 
      <% if ((type === "error") || (type === "different") || (type === "error_") || (type === "short") || (type === "overlap")){ %>
          <script>
              document.getElementById("alert").setAttribute("class","alert alert-dismissible fade show alert-danger");
          </script>
          <% } %>
      </script>

       <% if ((locals.type) === "success") { %>
          <script>
              
              document.getElementById("alert").setAttribute("class","alert alert-dismissible fade show alert-success");
          </script>
       <% } %>
  
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= message %>
    
    <script>
   $('#alert').show();
   $("#alert").fadeTo(2000, 500).slideUp(500, function(){
      $("#success-alert").slideUp(500);
      });
  </script>
    </div>
    <% } %>
