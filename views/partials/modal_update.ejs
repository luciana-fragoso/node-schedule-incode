<form method="post" id="form-modal-update">
<div id="modal-update" class="modal fade" role="dialog">
    <div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">Confirm operation</h4>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      
    </div>
    <div class="modal-body">
      
      <p>Update info below</p>
      <h6 class="font-weight-bold">Date <span class="mt-2 font-weight-normal"><input  max="9999-12-31" class="form-control" type="date" name="date" id="u-modal-date" /></span></h6>
      <h6 class="font-weight-bold">Starting time <span><input class="form-control" type="time" name="start_at" id="u-modal-start_at"/> </span></h6>
      <h6 class="font-weight-bold">Ending time <span><input class="form-control" type="time" id="u-modal-end_at" name="end_at"/> </span></h6>
    </div>
    <div class="modal-footer">
    <button type="button" id="restore" class="btn btn-primary" >Reset values</button>
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      
      <button type="submit" class="btn btn-success">Confirm</button>
    </div>
  </div>
  
  </div>
  </div>
</form>
